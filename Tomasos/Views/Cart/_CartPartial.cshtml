@using Microsoft.AspNetCore.Identity
@using Tomasos.Data
@model List<Tomasos.Models.CartViewModels.Dish>
@inject UserManager<ApplicationUser> userManager

<div class="text-center">
    <h3>Your cart</h3>
</div>
<div class="my-2 container">
    @if (@Model.Count == 0)
    {
        <div class="my-2 container">
            <div class="row justify-content-center">
                <div class="col text-center">
                    Your cart is currently empty.
                </div>
                <br />
            </div>
        </div>
    }
    @foreach (var dish in Model)
    {
        <div class="row justify-content-between">
            <div class="col-9">
                @(dish.Quantity + "x " + @dish.Name)
            </div>
            <div class="col">
                <a asp-action="Remove"
                   asp-controller="Cart"
                   asp-route-id="@dish.DishId"
                   data-ajax="true"
                   data-ajax-method="GET"
                   data-ajax-mode="replace"
                   data-ajax-update="#cart-order">
                    <i class="material-icons d-inline-block">
                        remove_circle
                    </i>
                </a>
            </div>
            <br />
        </div>
    }
</div>
<div class="cart-total container my-2">
    <div class="row justify-content-between">
        <div class="col-9">Total:</div>
        <div class="col">@Model.Sum(e => e.Price * e.Quantity) kr</div>
    </div>
    @if ((userManager.GetUserAsync(User)).Result.IsPremium)
    {
        if (Model.Sum(e => e.Quantity) >= 3)
        {
            <div class="row justify-content-between">
                <div class="col-9 text-danger">Premium price (-20%):</div>
                <div class="col text-danger">@((Model.Sum(e => (e.Price * e.Quantity)) - 70)*0.8) kr</div>
            </div>

            <div class="row justify-content-center my-2">
                Premium Exlcusive! Buy 3, get one off!
            </div>
        }
        else
        {
            <div class="row justify-content-between">
                <div class="col-9 text-danger">Premium price (-20%):</div>
                <div class="col text-danger">@Model.Sum(e => (e.Price * e.Quantity) * 0.8) kr</div>
            </div>
        }
    }
</div>
<div class="text-center">
    <a class="btn btn-lg btn-primary btn-block"
       asp-controller="Cart"
       asp-action="Order">Buy</a>
</div>



