@model ManageViewModel
@{
    ViewData["Title"] = "Manage account";
}
<div class="mt-3">
<h2 class="text-center">@ViewData["Title"]</h2>
<div class="row justify-content-center">
    <div class="col-md-5">
        <form method="post">
            <h4 class="text-center">Please fill in your information for us to be able to deliver you food.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" value="@Model.LastName" />
            </div>
            <div class="form-group">
                <label asp-for="StreetAddress"></label>
                <input asp-for="StreetAddress" class="form-control" value="@Model.StreetAddress" />
            </div>
            <div class="form-group">
                <label asp-for="PostNumber"></label>
                <input asp-for="PostNumber" class="form-control" value="@Model.PostNumber" />
            </div>
            <div class="form-group">
                <label asp-for="PostArea"></label>
                <input asp-for="PostArea" class="form-control" value="@Model.PostArea" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
            </div>
            <input type="hidden" asp-for="Email" value="@Model.Email" />
            <input type="hidden" asp-for="IdentityId" value="@Model.IdentityId" />
            <button type="submit" class="btn btn-default">Update</button>
        </form>
    </div>
</div>
</div>


